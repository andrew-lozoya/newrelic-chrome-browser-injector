{
    "name": "__MSG_appName__",
    "version": "1.0.5",
    "manifest_version": 2,
    "description": "__MSG_appDescription__",
    "icons":
    {
        "16": "icons/logo-text-128.png",
        "128": "icons/logo-text-128.png"
    },
    "default_locale": "en",
    "background":
    {
        "scripts": [
            "scripts/background.js",
            "scripts/csp.js"
        ],
        "persistent": true
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval' https://js-agent.nr-assets.net; object-src 'self'",
    "permissions": [
        "tabs",
        "storage",
        "webRequest",
        "webRequestBlocking",
        "browsingData",
        "<all_urls>"
    ],
    "options_ui":
    {
        "page": "options/options.html",
        "open_in_tab": true
    },
    "content_scripts": [
    {
        "matches": [
            "<all_urls>"
        ],
        "js": [
            "scripts/injector.js"
        ],
        "all_frames": true,
        "run_at": "document_start"
    }],
    "web_accessible_resources": [
        "scripts/aura-errors.js"
    ],
    "browser_action":
    {
        "default_icon":
        {
            "19": "icons/logo-text-128.png",
            "38": "icons/logo-text-128.png"
        },
        "default_title": "New Relic Injector",
        "default_popup": "popup/popup.html"
    }
}
