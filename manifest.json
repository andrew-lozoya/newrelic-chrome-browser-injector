{
    "name": "__MSG_appName__",
    "version": "1.0.2",
    "manifest_version": 2,
    "description": "__MSG_appDescription__",
    "icons":
    {
        "16": "icons/logo-text-128.png",
        "128": "icons/logo-text-128.png"
    },
    "default_locale": "en",
    "background":
    {
        "scripts": [
            "scripts/background.js"
        ]
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval' https://js-agent.newrelic.com; object-src 'self'",
    "permissions": [
        "tabs",
        "storage",
        "webRequest",
        "webRequestBlocking",
        "http://*/*",
        "https://*/*"
    ],
    "options_ui":
    {
        "page": "options/options.html",
        "open_in_tab": true
    },
    "content_scripts": [
    {
        "matches": [
          "http://*/*",
          "https://*/*"
        ],
        "js": [
            "scripts/contentScript.js"
        ],
        "all_frames": true,
        "run_at": "document_start"
    }],
    "browser_action":
    {
        "default_icon":
        {
            "19": "icons/logo-text-128.png",
            "38": "icons/logo-text-128.png"
        },
        "default_title": "New Relic Injector",
        "default_popup": "popup/popup.html"
    }
}